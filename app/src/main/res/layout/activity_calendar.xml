<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="9"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">


        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/entry_border"
            android:background="@null"
            android:layout_weight="7"></ImageButton>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/calendar"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_weight="2"
            />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_baseline_person_24"
            android:background="@null"
            android:layout_weight="7"
            android:id="@+id/user_button"></ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/calendar"
            android:textSize="48sp"
            android:gravity="center">

        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="9">

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/onpage_calendar"
            android:background="@null"
            android:layout_weight="1"
            android:id="@+id/calendar"
            ></ImageButton>
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_baseline_menu_book_24"
            android:background="@null"
            android:layout_weight="1"
            android:id="@+id/entryOverview"
            ></ImageButton>
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_baseline_note_alt_24"
            android:background="@null"
            android:layout_weight="1"
            android:id="@+id/writeEntry"
            ></ImageButton>
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_baseline_settings_24"
            android:background="@null"
            android:layout_weight="1"
            android:id="@+id/settings"
            ></ImageButton>

    </LinearLayout>
</LinearLayout>